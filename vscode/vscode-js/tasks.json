{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Babel)",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "command": "${workspaceFolder}/node_modules/.bin/babel",
      "args": [
        "${file}",
        "--out-file",
        "${fileDirname}/${fileBasenameNoExtension}.build.js"
      ]
    },
    {
      "label": "Test (Jasmine)",
      "command": "jasmine",
      "group": "test",
      "args": [],
      "problemMatcher": {
        "owner": "javascript",
        "fileLocation": ["absolute"],
        "severity": "error",
        "pattern": [
          {
            "regexp": "Message.*"
          },
          {
            "regexp": "[^ ](.*)",
            "message": 1
          },
          {
            "regexp": "Stack.*"
          },
          {
            "regexp": "at +.*\\((.*\\\\*.ts):(\\d+):(\\d+)\\)",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ]
      }
    }
  ]
}
